<div id="root-container" class="{{unless this.session.isLightTheme 'dark-theme-on'}}">
    {{#if this.isReady}}
        <div class="outer-container">
                <div class="header">
                    <i class="doctor-icon fa-solid fa-user-doctor-hair fa-2x"></i>
                    <div class="title-container">Schedule a Visit</div>
                    <a href="#" class="theme-toggle" {{on 'click' (fn this.onToggleTheme)}}>
                       <div>
                        {{#if this.session.isLightTheme}}
                            <i class="fa-solid fa-moon-stars fa-2x"></i>
                        {{else}}
                            <i class="fa-solid fa-sun-bright fa-2x"></i>
                        {{/if}}
                       </div>
                    </a>
                </div>
                <div class="schedule-container">
                    <div class="schedule-menu-container">
                        <Common::Menu />
                    </div>
                    <div class="schedule-states">
                        {{outlet}}
                    </div>
                </div>
        </div>
    {{else}}
        {{outlet}}
    {{/if}}
</div>
