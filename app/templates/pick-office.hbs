<div class="offices-container">
    {{#each @model.offices as |office|}}
        <Pick::Office @office={{office}} @clinicianId={{@model.clinicianId}} />
    {{/each}}

    {{#unless @model.offices.length }}
        <div class="no-offices-found">
            <div class="title-container">
                <i class="fa-regular fa-face-confused"></i>
                <h1>Sorry</h1>
            </div>
            <h3>There are no offices on record for Clinician: {{@model.clinicianId}}</h3>
        </div>
    {{/unless}}
</div>